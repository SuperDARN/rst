# Compilation directives                                            #
#                                                                   #
#####################################################################

export XPATH="/usr/X11R6"

# Compile netCDF software

export NETCDF_PATH="/opt/homebrew/"

# pathname for the CDF software

export CDF_PATH="$HOME/Applications/cdf/cdf39_0-dist/"

# SVG library

export SVGLIB="rsvg.1"

